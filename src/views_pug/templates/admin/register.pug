div.card
  h1 Crear cuenta
  form.user-form(action='/admin/register' method='POST')
    div.form-group
      label(for='name') Nombre
      input(type='name' name='name' placeholder='Nombre' value= typeof name != 'undefined' ? name : '' )
    div.form-group
      button.btn.btn-primary.btn-block(type='submit') Registrar