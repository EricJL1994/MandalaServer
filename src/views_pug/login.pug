- var tittleText = 'Login'
include templates/header.pug

main
  div.card
    h1  Iniciar sesión 
    include templates/messages.pug
    form.user-form(action='/users/login' method='POST')
      div.form-group
        label(for='email') Email
        input.form-control(type='email' name='email' placeholder='Email')
      div.form-group
        label(for='password') Contraseña
        input(type='password' name='password' placeholder='Constraseña')
      div.form-group
        button.btn.btn-primary.btn-block(type='submit') Entrar
    hr
    p
      | ¿No tienes cuenta? 
      a(href='/users/register') Crear